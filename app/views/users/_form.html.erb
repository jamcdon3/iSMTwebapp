<%= form_with scope: :user, url: url, method: method, :html => {:class => "form-group col-sm-10 col-md-6 mx-auto"} do |form| %>
  <div class="form-row m-1">
    <%= email_field :user, :email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-row m-1">
    <%= password_field :user, :password, class: "form-control", placeholder: "Password" %>
  </div>
  <div class="form-row mt-3">
    <%= form.submit submitText, :class => "btn btn-outline-success mx-auto w-50" %>
  </div>
<% end %>