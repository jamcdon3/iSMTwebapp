<h1>All Items</h1>

<%= render partial: 'shared/table', locals: { header: ['Name','Brand','Category','Quantity', 'Popularity'],
                                              options: [{title: 'Cart', url: "cart_path(m)", method: :patch},
                                                        {title: 'Wishlist', url: "wishlist_path(m)", method: :patch},
                                                        {title: 'Buy Now', url: "item_path(m)"},
                                                        {title: 'Show', url: "item_path(m)"},
                                                        {title: 'Edit', url: "edit_item_path(m)"},
                                                        {title: 'Destroy', url: "item_path(m)", method: :delete, data: { confirm: 'Are you sure?'} }],
                                              model: @items,
                                              row: [:name, :brand, :category, :quantity, :purchases]} %>

<% @items.each do |item| %>
  <div class="card mb-4 shadow-sm" >
    <div class="container" >
    <h2><%= item.name %></h2>
    <p> </p>
    <p><strong>Category:</strong> <%= item.category %></p>
    <p><%= image_tag(item.image, :style => 'display: block; width: 40%;') %></p>
    <p><strong>Restricted:</strong> <%= item.restricted %></p>
    <p><strong>Age Restricted: </strong><%= item.ageRestricted %></p>
    <p><strong>Quantity:</strong> <%= item.quantity %></p>
    <p><strong>Cost:</strong> <%= item.cost %></p>
    <p><strong>Tax Slab:</strong> <%= item.taxSlab %></p>
    <p><strong>ID:</strong> <%= item.id %></p>
    <p><strong>Purchases:</strong> <%= item.purchases %></p>
    <%= link_to "Read More", item_path(item), :class => 'btn btn-sm btn-secondary', :type => 'button' %>
      <p></p>
    </div>
  </div>
<% end %>

